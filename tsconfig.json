{
  "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "importHelpers": true,
      "noImplicitAny": true,
      "removeComments": false,
      "esModuleInterop": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true,
      "skipLibCheck": true,
      "lib": ["es2018"],
      "noUnusedLocals": true,
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
  },
  "include": [
      "src/**/*",
  ],
  "exclude": [
      "node_modules",
      "dist",
      "tests"
  ]
}
